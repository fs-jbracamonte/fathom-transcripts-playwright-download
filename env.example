# Fathom Meeting Transcript Extractor - Environment Configuration
# Copy this file to .env and fill in your actual values

# ====================
# REQUIRED SETTINGS
# ====================

# The base URL of your Fathom instance
BASE_URL=https://fathom.video

# Your authentication credentials
AUTH_USERNAME=your-email@example.com
AUTH_PASSWORD=your-password

# Authentication provider (auto|google|microsoft|password)
# Use 'auto' to automatically detect the provider
AUTH_PROVIDER=auto

# ====================
# OPTIONAL SETTINGS
# ====================

# Security and Display Settings
# -----------------------------
# Run in secure mode (hides sensitive information in logs)
SECURE_MODE=false

# Run browser in headless mode (no visible browser window)
HEADLESS=false

# Minimize browser window (only works when HEADLESS=false)
MINIMIZED=false

# Meeting Processing Settings
# ---------------------------
# Number of meetings to visit and extract transcripts (0 = disabled)
MAX_MEETINGS_TO_VISIT=0

# Skip the automatic scrolling to load all meetings
SKIP_SCROLL=false

# Meeting Filtering Options
# -------------------------
# Filter meetings by date range (format: YYYY-MM-DD)
# Leave empty to include all dates
MEETING_DATE_START=
MEETING_DATE_END=

# Filter meetings by title (case-insensitive partial match)
# Leave empty to include all meetings
MEETING_TITLE_FILTER=

# Path Settings
# -------------
# Login page path (relative to BASE_URL)
LOGIN_PATH=/login

# Data page path after login (relative to BASE_URL)
DATA_PAGE_PATH=/home

# Directory for downloads
DOWNLOAD_DIR=downloads

# Timeout Settings (milliseconds)
# -------------------------------
# Wait timeout for element detection
WAIT_TIMEOUT_MS=15000

# Navigation timeout
NAV_TIMEOUT_MS=30000

# ====================
# DEBUGGING
# ====================
# To run in debug mode with Playwright Inspector:
# Windows: $env:PWDEBUG="1"; npx playwright test auth.setup --project=setup
# Mac/Linux: PWDEBUG=1 npx playwright test auth.setup --project=setup
