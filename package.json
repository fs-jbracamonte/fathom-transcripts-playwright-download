{
  "name": "playwright-test",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "node -e \"require('fs').mkdirSync('downloads',{recursive:true})\"",
    "install:browsers": "npx --yes playwright install chromium",
    "test": "playwright test",
    "test:setup": "playwright test --project=setup",
    "test:setup:headed": "playwright test --project=setup-headed",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "codegen": "playwright codegen",
    "format": "npx --yes prettier -w .",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "prepare-build": "node scripts/prepare-build.js",
    "dist": "npm run prepare-build && electron-builder",
    "dist-win": "npm run prepare-build && electron-builder --win",
    "dist-mac": "npm run prepare-build && electron-builder --mac",
    "dist-linux": "npm run prepare-build && electron-builder --linux",
    "postinstall": "playwright install chromium"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "electron": "^32.2.0",
    "electron-builder": "^24.13.3",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "description": "This project signs into a website and downloads data using Playwright tests.",
  "main": "electron/main.js",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "acorn": "^8.15.0",
    "acorn-walk": "^8.3.4",
    "arg": "^4.1.3",
    "create-require": "^1.1.1",
    "diff": "^4.0.2",
    "keytar": "^7.9.0",
    "make-error": "^1.3.6",
    "playwright": "^1.55.0",
    "playwright-core": "^1.55.0",
    "undici-types": "^7.10.0",
    "v8-compile-cache-lib": "^3.0.1",
    "yn": "^3.1.1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.fathom.transcripts",
    "productName": "Fathom Transcript Extractor",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "public/**/*",
      "tests/**/*",
      "utils/**/*",
      "playwright.config.ts",
      "tsconfig.json",
      "package.json",
      "node_modules/**/*",
      "!node_modules/**/test/**",
      "!node_modules/**/*.map",
      "!test-results/**",
      "!playwright-report/**",
      "!dist/**/*",
      "!transcripts/**/*",
      "!downloads/**/*"
    ],
    "asar": false,
    "includeSubNodeModules": true,
    "extraResources": [
      {
        "from": "storage",
        "to": "storage",
        "filter": ["**/*"]
      },
      {
        "from": "${env.LOCALAPPDATA}/ms-playwright",
        "to": "playwright-browsers",
        "filter": ["chromium-*/**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    }
  }
}
